<form action=<%="/recipes/#{@recipe.id}"%> method="post">
<input id="hidden" type="hidden" name="_method" value="PATCH">
  Recipe Name: <input type="text" name="name" value=<%= @recipe.name %> >
  Recipe Ingredients: <input type="text" name="ingredients" value=<%= @recipe.ingredients %> >
  Recipe Cooktime: <input type="text" name="cook_time" value=<%= @recipe.cook_time %> >
  <input type="submit" id="Submit">
</form>